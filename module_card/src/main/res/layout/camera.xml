<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/CommonBg_GraBlue">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.synjones.huixinexiao.module_card.zxing.view.ViewfinderView
            android:id="@+id/viewfinder_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/scan_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@color/theme"
            android:gravity="center"
            android:text="二维码"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x36" />

        <TextView
            android:id="@+id/cancel_scan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x100"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/btn_back_selector"
            android:gravity="center"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x30"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x36" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/x350"
            android:gravity="center_horizontal"
            android:text="将二维码放入框内，即可扫描得到结果"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x32" />


        <TextView
            android:id="@+id/electric"
            android:textSize="12dp"
            android:textColor="#CCffffff"
            android:drawablePadding="@dimen/x15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/shoudian_guan"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x150"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="打开手电筒" />
    </RelativeLayout>
    </FrameLayout>
</LinearLayout>